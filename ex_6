    <script language="javascript">

      function referencia()
    {
        var nome,sobrenome,nomemeio,nomemeio2;
        nome= document.frm4.nome.value;
        nomemeio= document.frm4.nomemeio.value;
        nomemeio2= document.frm4.nomemeio2.value;
        sobrenome= document.frm4.sobrenome.value;
        document.getElementById("referenciabibliografica").innerHTML = "<b>Entrada: </b>" + nome+ " "+ nomemeio+ " " + sobrenome + " "+
    "<b>Saída: " + sobrenome.toUpperCase()+ "</b>, " + nome + ",  "+ nomemeio.substr(0, 1)+ ",  "+ nomemeio2.substr(0, 1) ;

    }

</script>
