    <script language="javascript">

    function ExibirString()
    {
        var string,qde;
        string= document.frm1.string.value;
        qde= parseFloat(document.frm1.numero.value);
        document.write("<table border '2'>");

        for (var ss = 0; ss < qde; ss++)
      {
        document.write("<tr><td>" + string.charAt(ss) + "</td></tr>");
      }
         document.write("</table>");
    }
</script>
</head>
    <body>
        <form name="frm1">
        Digite_algo: <input type="text" name="string" ><br>
        Digite_a_quantidade_de_digitos_tem_a_palavra: <input type="number" name="numero" ><br>
       <input type="button" value="Enviar" onclick="ExibirString();">
        <br><br>
        
      </form>
